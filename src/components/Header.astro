---

import Logo from './Logo.astro';
import Nav from './Nav.astro';

---

<div class='header'>
    <div class='header__content'>
        <Logo />
        <Nav />
    </div>
</div>

<style>
    .header {
        position: sticky;
        top: 0;
        display: flex;
        justify-content: center;
        width: 100%;
        height: 100px;
        background: #fff;
    }

    .header__content {
        display: flex;
        align-items: center;
        width: 100%;
        max-width: var(--max-content-width);
    }
</style>