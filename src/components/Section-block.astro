---
export interface Props {
	sectionNum: string;
    sectionName: string;
    sectionCopy: string;
    children: any;
}

const { sectionNum, sectionName, sectionCopy, children } = Astro.props as Props;
---

<div class='section-block' id={sectionNum}>
    <div class='section-block__content'>
        <h2>{sectionName}</h2>
        {sectionCopy && <p>{sectionCopy}</p>}
        <slot />
    </div>
</div>

<style>
    .section-block {
        display: flex;
        justify-content: center;
        width: 100%;
        margin: 25px auto;
        height: auto;
        padding-top: 100px;
    }

    .section-block__content {
        display: flex;
        flex-direction: column;
        align-items: center;
        max-width: var(--max-content-width);
        width: 100%;
    }
</style>